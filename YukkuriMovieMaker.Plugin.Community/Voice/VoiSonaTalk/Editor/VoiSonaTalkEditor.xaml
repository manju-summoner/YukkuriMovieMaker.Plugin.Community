<UserControl x:Class="YukkuriMovieMaker.Plugin.Community.Voice.VoiSonaTalk.Editor.VoiSonaTalkEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YukkuriMovieMaker.Plugin.Community.Voice.VoiSonaTalk.Editor"
             xmlns:c="clr-namespace:YukkuriMovieMaker.Controls;assembly=YukkuriMovieMaker.Controls"
             xmlns:vt="clr-namespace:YukkuriMovieMaker.Plugin.Community.Voice.VoiSonaTalk"
             xmlns:icons="clr-namespace:YukkuriMovieMaker.Resources.Icons;assembly=YukkuriMovieMaker.Plugin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             d:DataContext="{d:DesignInstance Type={x:Type local:VoiSonaTalkEditorViewModel}}">
    <c:PopupButton Content="{x:Static vt:Texts.EditIntonation}"
                   PopupWidth="{Binding Source={x:Static vt:VoiSonaTalkSettings.Default}, Path=Editor.Width}"
                   PopupHeight="NaN"
                   BeginEdit="PopupButton_BeginEdit"
                   EndEdit="PopupButton_EndEdit"
                   ResizeMode="Horizontal"
                   >
        <c:PopupButton.PopupContent>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="26"/>
                </Grid.ColumnDefinitions>
                <!-- 句読点毎の塊 -->
                <ItemsControl ItemsSource="{Binding AcousticPhrases}">
                    <ItemsControl.Template>
                        <ControlTemplate>
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </ControlTemplate>
                    </ItemsControl.Template>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type local:VoiSonaTalkEditorAcousticPhraseViewModel}">
                            <Grid>
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsFirst}" Value="False">
                                                <Setter Property="Margin" Value="26,0,0,0"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <!-- 文節毎の抑揚編集スライダー（接続済み） -->
                                <ItemsControl ItemsSource="{Binding AccentSliders}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type local:VoiSonaTalkEditorAccentSliderViewModel}">
                                            <Grid Width="{Binding Width}" Height="26">
                                                <Grid.Style>
                                                    <Style TargetType="Grid">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsFirst}" Value="False">
                                                                <Setter Property="Margin" Value="26,0,0,0"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Grid.Style>
                                                <Rectangle StrokeThickness="1"/>
                                                <Slider Value="{Binding AccentPosition, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                        Minimum="0" Maximum="{Binding AccentMax}" 
                                                        IsSnapToTickEnabled="True" 
                                                        TickFrequency="1" 
                                                        TickPlacement="BottomRight"
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Bottom"
                                                        Margin="7.5,0,7.5,0"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Word毎の塊 -->
                                <ItemsControl Grid.Row="1" ItemsSource="{Binding Words}">
                                    <ItemsControl.Resources>
                                        <DrawingBrush x:Key="VDashBrush"
                                                      Stretch="None"
                                                      TileMode="Tile"
                                                      Viewport="0,0,1,8"
                                                      ViewportUnits="Absolute">
                                            <DrawingBrush.Drawing>
                                                <DrawingGroup>
                                                    <GeometryDrawing Brush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
                                                        <GeometryDrawing.Geometry>
                                                            <RectangleGeometry Rect="0,0,1,5"/>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                </DrawingGroup>
                                            </DrawingBrush.Drawing>
                                        </DrawingBrush>
                                        <DrawingBrush x:Key="MouseOveredVDashBrush"
                                                      Stretch="None"
                                                      TileMode="Tile"
                                                      Viewport="0,0,1,8"
                                                      ViewportUnits="Absolute">
                                            <DrawingBrush.Drawing>
                                                <DrawingGroup>
                                                    <GeometryDrawing Brush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}">
                                                        <GeometryDrawing.Geometry>
                                                            <RectangleGeometry Rect="0,0,1,5"/>
                                                        </GeometryDrawing.Geometry>
                                                    </GeometryDrawing>
                                                </DrawingGroup>
                                            </DrawingBrush.Drawing>
                                        </DrawingBrush>
                                    </ItemsControl.Resources>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type local:VoiSonaTalkEditorWordViewModel}">
                                            <Grid>
                                                <Grid.Style>
                                                    <Style TargetType="Grid">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsChain}" Value="False">
                                                                <Setter Property="Margin" Value="26,0,0,0"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsChainable}" Value="False">
                                                                <Setter Property="Margin" Value="0"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Grid.Style>
                                                <!-- モーラ一覧 -->
                                                <ItemsControl ItemsSource="{Binding Moras}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate DataType="{x:Type local:VoiSonaTalkEditorMoraViewModel}">
                                                            <Grid Width="26" Height="26">
                                                                <Rectangle StrokeThickness="1"/>
                                                                <TextBlock Text="{Binding Text}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <!-- 分離ボタン -->
                                                <Grid Width="13"
                                                      Margin="-7.5,0,0,0"
                                                      HorizontalAlignment="Left" Name="splitButton">
                                                    <Grid.Style>
                                                        <Style TargetType="Grid">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsChainable}" Value="False">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Setter Property="IsEnabled" Value="False"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsChain}" Value="False">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Setter Property="IsEnabled" Value="False"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Grid.Style>
                                                    <Rectangle Width="1"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Stretch">
                                                        <Rectangle.Style>
                                                            <Style TargetType="Rectangle">
                                                                <Setter Property="Fill" Value="{DynamicResource VDashBrush}"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ElementName=splitButton, Path=IsMouseOver}" Value="True">
                                                                        <Setter Property="Fill" Value="{DynamicResource MouseOveredVDashBrush}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Rectangle.Style>
                                                    </Rectangle>
                                                    <Button Command="{Binding SplitCommand}" ToolTip="{x:Static vt:Texts.Split}">
                                                        <Button.Style>
                                                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                                <Setter Property="Opacity" Value="0"/>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Opacity" Value="1"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                        <Button.Template>
                                                            <ControlTemplate>
                                                                <Grid Background="Transparent">
                                                                    <ContentControl Content="{DynamicResource {x:Static icons:IconKeys.ContentCut}}"/>
                                                                </Grid>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                </Grid>
                                                <!-- 結合ボタン -->
                                                <Grid Width="26" 
                                                      Height="26" 
                                                      Margin="-26,0,0,0"
                                                      HorizontalAlignment="Left">
                                                    <Grid.Style>
                                                        <Style TargetType="Grid">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsChainable}" Value="False">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Setter Property="IsEnabled" Value="False"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsChain}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Setter Property="IsEnabled" Value="False"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Grid.Style>
                                                    <ContentControl Content="{DynamicResource {x:Static icons:IconKeys.LinkVariant}}" Margin="6" Opacity="0.3"/>
                                                    <Button Content="{DynamicResource {x:Static icons:IconKeys.LinkVariant}}" Padding="5" Command="{Binding JoinCommand}" ToolTip="{x:Static vt:Texts.Join}">
                                                        <Button.Style>
                                                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                                <Setter Property="Opacity" Value="0"/>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Opacity" Value="1"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Command="{Binding TogglePlayCommand}" Grid.Column="1">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Content" Value="{DynamicResource {x:Static icons:IconKeys.Play}}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                    <Setter Property="Content" Value="{DynamicResource {x:Static icons:IconKeys.Stop}}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                    <Setter Property="Content" Value="{DynamicResource {x:Static icons:IconKeys.LoadingAnimation}}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </c:PopupButton.PopupContent>
    </c:PopupButton>
</UserControl>
